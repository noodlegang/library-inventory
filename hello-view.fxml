<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<GridPane alignment="CENTER" style="-fx-background-color: linear-gradient(pink, white);" prefHeight="483.0" prefWidth="480.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test2.HelloController">
    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>


    <Label fx:id="welcomeText" text="Inventory" style="-fx-background-color: #be1d00; -fx-text-fill: white;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
    <Label fx:id="column" text="Help" visible="false" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <ListView fx:id="listview" GridPane.columnIndex="2" GridPane.rowIndex="2" GridPane.rowSpan="3" />
    <TextField fx:id="searchEntry" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <Button fx:id="search" style="-fx-background-color: linear-gradient(indianred, #be1d00);
    -fx-background-radius: 30;
    -fx-background-insets: 0;
    -fx-text-fill: white;" text="Search" onAction="#switchScenes" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <Button fx:id="save" style="-fx-background-color: linear-gradient(indianred, #be1d00);
    -fx-background-radius: 30;
    -fx-background-insets: 0;
    -fx-text-fill: white;" text="Save" onAction="#onSaveToFile" GridPane.columnIndex="1" GridPane.rowIndex="5" />
    <Button fx:id="btnDelete" style="-fx-background-color: linear-gradient(indianred, #be1d00);
    -fx-background-radius: 30;
    -fx-background-insets: 0;
    -fx-text-fill: white;" text="Delete" onAction="#onDeleteSelected" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <Button fx:id="edit" style="-fx-background-color: linear-gradient(indianred, #be1d00);
    -fx-background-radius: 30;
    -fx-background-insets: 0;
    -fx-text-fill: white;" text="Edit" onAction="#editRow" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button fx:id="load" style="-fx-background-color: linear-gradient(indianred, #be1d00);
    -fx-background-radius: 30;
    -fx-background-insets: 0;
    -fx-text-fill: white;" text="Load" onAction="#LoadInfo" GridPane.columnIndex="0" GridPane.rowIndex="5" />
    <Button text="Exit" style="-fx-background-color: linear-gradient(indianred, #be1d00);
    -fx-background-radius: 30;
    -fx-background-insets: 0;
    -fx-text-fill: white;" onAction="#Stop" GridPane.columnIndex="2" GridPane.rowIndex="5" />
    <Label fx:id="row" text="Help" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="6"/>



    <Label fx:id="res" text="Search results" visible="false" style="-fx-background-color: #be1d00; -fx-text-fill: white;" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
    <Label fx:id="error" visible="false" GridPane.columnIndex="2" GridPane.rowIndex="3"/>
    <ListView fx:id="nameRes" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="3" GridPane.columnSpan="2"/>
    <Button fx:id="add" style="-fx-background-color: linear-gradient(indianred, #be1d00);
    -fx-background-radius: 30;
    -fx-background-insets: 0;
    -fx-text-fill: white;" text="Add" onAction="#addToInventory" visible="false" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <Button fx:id="close" style="-fx-background-color: linear-gradient(indianred, #be1d00);
    -fx-background-radius: 30;
    -fx-background-insets: 0;
    -fx-text-fill: white;" text="Close" onAction="#switchScenes" visible="false" GridPane.columnIndex="3" GridPane.rowIndex="4" />
</GridPane>
